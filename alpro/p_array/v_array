package p_array

import "fmt"

const nmax = 4

type Tabint [nmax]int

func Varray() {
	var data Tabint
	var ndata int
	baca(&data, &ndata)
	cetak(data, ndata)
}

func baca(A *Tabint, n *int) {
	var num int
	*n = 0
	fmt.Scan(&num)
	for num != 0 {
		if *n < nmax {
			A[*n] = num
			(*n)++
		} else {
			fmt.Println("Lebih dari nmax, masukan 0 untuk berhenti")
		}
		fmt.Scan(&num)
	}
}

func cetak(A Tabint, n int) {
	for i := 0; i < n; i++ {
		fmt.Print(A[i], " ")
	}
	fmt.Println()
	fmt.Println("Panjang data:", n)
}
